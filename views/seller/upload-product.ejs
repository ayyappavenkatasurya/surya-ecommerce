<%# views/seller/upload-product.ejs %>
<%- include('../partials/header', { title: 'Upload New Product' }) %>

<div class="seller-manage-container container"> <%# Added container class %>
    <h1>Upload New Product</h1>
    <p class="text-muted mb-3">Your product will be submitted for admin approval.</p>

     <form action="/seller/upload-product" method="POST" class="form-submit-spinner">
        <div class="form-group">
             <label for="name">Product Name:</label>
            <input type="text" id="name" name="name" value="<%= typeof product !== 'undefined' ? product.name : '' %>" required>
         </div>
        <div class="form-group">
            <label for="category">Category:</label>
             <input type="text" id="category" name="category" value="<%= typeof product !== 'undefined' ? product.category : '' %>" required>
         </div>
         <div class="form-group">
            <label for="price">Price (â‚¹):</label>
            <input type="number" id="price" name="price" step="0.01" min="0" value="<%= typeof product !== 'undefined' ? product.price : '' %>" required>
         </div>
        <div class="form-group">
             <label for="stock">Stock Quantity:</label>
             <input type="number" id="stock" name="stock" min="0" step="1" value="<%= typeof product !== 'undefined' ? product.stock : '' %>" required> <%# Added step=1 %>
        </div>
         <div class="form-group">
             <label for="imageUrl">Image URL:</label>
             <input type="url" id="imageUrl" name="imageUrl" value="<%= typeof product !== 'undefined' ? product.imageUrl : '' %>" required>
             <small class="text-muted">Must be a direct link to an image (e.g., ending in .jpg, .png, .webp).</small>
         </div>
         <div class="form-group">
             <label for="specifications">Specifications (Optional):</label>
             <textarea id="specifications" name="specifications" rows="5"><%= typeof product !== 'undefined' ? product.specifications : '' %></textarea>
             <small class="text-muted">Provide details like size, materials, features, etc.</small>
        </div>
         <button type="submit" class="btn btn-primary"><i class="fas fa-upload"></i> Submit for Approval</button>
         <a href="/seller/dashboard" class="btn btn-secondary">Cancel</a>
    </form>
 </div>

 <%- include('../partials/footer') %>