<%# views/seller/dashboard.ejs %>
<%- include('../partials/header', { title: 'Seller Dashboard' }) %>

<div class="seller-dashboard-container container">
    <h1>Seller Dashboard</h1>
    <p class="text-muted mb-3">Welcome, <%= currentUser.name %>! Manage your products and orders here.</p>

    <%# Add seller specific stats if needed later %>
    <%# Example: Fetch counts in sellerController %>
    <%# const pendingCount = 0, approvedCount = 0, ordersCount = 0; %>
    <%# <div class="row mb-3"> ... stats cards ... </div> %>

    <div class="admin-actions-grid"> <%# Reusing admin grid style %>
         <a href="/seller/upload-product" class="admin-action-card card">
            <i class="fas fa-upload"></i>
            <h3>Upload Product</h3>
            <p>Add a new product for admin approval.</p>
        </a>
         <a href="/seller/manage-products" class="admin-action-card card">
            <i class="fas fa-edit"></i>
            <h3>Manage My Products</h3>
            <p>View status, edit, or remove your products.</p>
         </a>
        <a href="/seller/manage-orders" class="admin-action-card card">
             <i class="fas fa-receipt"></i>
             <h3>View My Orders</h3>
             <p>See orders containing your products.</p>
        </a>
        <a href="/user/profile" class="admin-action-card card">
             <i class="fas fa-user-circle"></i>
             <h3>My Profile</h3>
             <p>Update your address or account details.</p>
        </a>
    </div>

    <div class="mt-4">
         <form action="/auth/logout" method="POST" class="form-submit-spinner">
            <button type="submit" class="btn btn-danger"><i class="fas fa-sign-out-alt"></i> Logout</button>
        </form>
    </div>
</div>

 <%- include('../partials/footer') %>